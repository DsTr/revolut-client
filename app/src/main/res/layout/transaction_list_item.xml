<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="?attr/selectableItemBackground"
                                             android:clickable="true"
                                             android:focusable="true"
                                             android:padding="@dimen/activity_horizontal_margin">

    <TextView
            android:text="TextVi fdfdfdfdfdfdfd dfdf dfdf dfdfd fdf dfdew"
            android:layout_width="220dp"
            android:layout_height="44dp"
            android:id="@+id/info_text_view"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent" android:maxLines="2"
            android:singleLine="false" android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/amount"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:text="Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/amount"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>

    <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_view" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_text_view" android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" android:textSize="16sp" android:textColor="@android:color/darker_gray"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/additional_info"
            app:layout_constraintTop_toBottomOf="@+id/date_view" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:text="Additional fdf df dfdf dfd dfdf dfdf df dfd"
            app:layout_constraintEnd_toEndOf="@+id/info_text_view" app:layout_constraintHorizontal_bias="0.068"
            android:layout_marginStart="8dp"/>


